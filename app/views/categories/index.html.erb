<div class="container mt-3">
  <h1>Categories</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>
            <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary btn-sm' %>
            <%= button_to "Delete", {:controller => :categories,
      :action => 'destroy', :id => category.id }, :method => :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Category', new_category_path, class: 'btn btn-success' %>
</div>
